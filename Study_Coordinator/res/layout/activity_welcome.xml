<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.study_coordinator.WelcomeActivity" 
    >

    <TextView
        
        android:id="@+id/tw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:layout_marginBottom="30dp" 
        android:textSize="18sp"
        android:textColor="@android:color/white"
        />
    
    <TextView
        android:id="@+id/tw2"
        android:layout_below="@id/tw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_marginBottom="25dp" 
        android:textSize="16sp"
        android:textColor="@android:color/white"
        />
    
    <TextView
        android:id="@+id/tw4"
        android:layout_below="@id/tw2"                
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white" 
        
        />
    
    <EditText 
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_below="@id/tw2"
        android:layout_toRightOf="@id/tw4"
        android:inputType="text"
        android:textSize="16sp"     
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white"
                
        />
    <TextView
        android:id="@+id/tw5"
        android:layout_below="@id/tw4"                
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textSize="16sp"
        android:textColor="@android:color/white" 
        />
    
    <EditText
        android:id="@+id/et2"
        android:layout_toRightOf="@id/tw5"
        android:layout_below="@id/tw4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:textSize="16sp"
        android:ems="10"
        android:inputType="textPassword" 
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/white"
        >

        
    </EditText>
    
    <Button 
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/login"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et2"        
        android:textColor="@android:color/white"
        
        />
    	
    <TextView
        android:id="@+id/tw3"
        android:layout_below="@id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/notRegistered"
        android:textSize="16sp"
        android:layout_marginBottom="25dp"
        android:textColor="@android:color/white"
        />
    
    <Button 
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tw3"
        android:layout_marginBottom="12dp"
        android:textColor="@android:color/white"
        />

    
    
</RelativeLayout>
